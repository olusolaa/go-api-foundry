# Application Configuration
APP_PORT=8080
APP_ENV=development
GIN_MODE=debug
SKIP_DOTENV=false  # Set to true to skip loading .env file (useful in production)

# Router / HTTP
REQUEST_TIMEOUT=30s
MAX_REQUEST_BODY_BYTES=1048576
TRUSTED_PROXIES=  # Comma-separated CIDRs/IPs. Use '*' only for local/dev.

# Metrics
METRICS_ENABLED=true

# Versioned migrations
MIGRATIONS_DIR=migrations

# OpenTelemetry tracing (OTLP/HTTP)
OTEL_TRACES_ENABLED=false
OTEL_SERVICE_NAME=go-api-foundry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# HSTS (only set for effectively-HTTPS requests)
HSTS_ENABLED=  # Optional override: true/false. Default enabled for APP_ENV=production|prod.
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# CORS Configuration
CORS_ALLOWED_ORIGIN=http://localhost:3000,http://localhost:4000  # Comma-separated list of allowed origins for CORS

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100  # Number of requests allowed per time window
RATE_LIMIT_WINDOW=1m     # Time window for rate limiting (e.g., 30s, 1m, 5m, 1h)

# Database Configuration (Option 1: Connection String)
# APP_DATABASE_URL=postgres://user:pass@localhost:5432/dbname?sslmode=disable

# Database Configuration (Option 2: Individual Fields)
POSTGRES_HOST=postgres  # container name
POSTGRES_PORT=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB_NAME=
POSTGRES_SSLMODE=

# Redis Configuration (optional - required for distributed rate limiting)
REDIS_HOST=redis  # container name
REDIS_PORT=6379
REDIS_PASSWORD=  # Optional Redis password

#RabbitMQ configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672 
RABBITMQ_USER=
RABBITMQ_PASSWORD=
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT} 

#AWS SQS configuration
AWS_REGION=eu-east-1
AWS_ACCESS_KEY_ID= #test
AWS_SECRET_ACCESS_KEY= #test
AWS_SQS_HOST=localstack
AWS_SQS_LOCAL_GATEWAY_PORT=4566
AWS_SQS_EXTERNAL_GATEWAY_PORT_RANGE_START=4510
AWS_SQS_EXTERNAL_GATEWAY_PORT_RANGE_END=4559
AWS_SQS_ENDPOINT_URL=http://${AWS_SQS_HOST}:${AWS_SQS_LOCAL_GATEWAY_PORT}
